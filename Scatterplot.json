{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "Availability vs Mean Household Income (Q1 2022)",

  "layer": [
    {
      "data": { "url": "data/4G_availability_in_Malaysia.csv" },
      "mark": {"type": "circle", "size": 200, "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "x": {
          "field": "Availability_Q1_2022",
          "type": "quantitative",
          "title": "Availability (%)",
          "scale": {"domain": [85, 100]}
        },
        "y": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Household Income (RM)",
          "axis": {"format": "~s"}
        },
        "color": {
          "field": "States",
          "type": "nominal",
          "legend": {"title": "States"},
          "scale": {"scheme": "category20"}
        },
        "size": {"field": "poverty", "type": "quantitative", "title": "Poverty Rate (%)"},
        "tooltip": [
          {"field": "States", "type": "nominal", "title": "State"},
          {"field": "Availability_Q1_2022", "type": "quantitative", "title": "Availability (%)"},
          {"field": "income_mean", "type": "quantitative", "title": "Mean Income (RM)"},
          {"field": "poverty", "type": "quantitative", "title": "Poverty Rate (%)"}
        ],
        "opacity": {
          "condition": {"selection": "legend_sel", "value": 1},
          "value": 0.2
        }
      },
      "selection": {
        "legend_sel": {"type": "multi", "fields": ["States"], "bind": "legend"}
      }
    },
    {
      "data": { "url": "data/4G_availability_in_Malaysia.csv" },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 6,
        "dy": -5,
        "color": "Black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"field": "Availability_Q1_2022", "type": "quantitative"},
        "y": {"field": "income_mean", "type": "quantitative"},
        "text": {"field": "States"},
        "opacity": {
          "condition": {"test": "datum.States == 'Putrajaya'", "value": 1},
          "value": 0
        }
      }
    },
    {
  "data": { "url": "data/4G_availability_in_Malaysia.csv" },
  "mark": {
    "type": "text",
    "align": "left",
    "dx": 8,
    "dy": -5,
    "color": "black",
    "fontWeight": "bold"
  },
  "encoding": {
    "x": {"field": "Availability_Q1_2022", "type": "quantitative"},
    "y": {"field": "income_mean", "type": "quantitative"},
    "text": {"field": "States"},
    "opacity": {
      "condition": {"test": "datum.States == 'Sarawak'", "value": 1},
      "value": 0
    }
  }
}

  ]
}

